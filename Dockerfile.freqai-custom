FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    git \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements-freqai-custom.txt .
COPY requirements-llm.txt .
COPY requirements-quantum.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-freqai-custom.txt
RUN pip install --no-cache-dir -r requirements-llm.txt
RUN pip install --no-cache-dir -r requirements-quantum.txt

# Copy application code
COPY src/ /app/src/
COPY models/ /app/models/
COPY config/ /app/config/

# Create logs directory
RUN mkdir -p /app/logs

# Expose FastAPI port
EXPOSE 8001

# Set environment variables
ENV MODEL_DIR=/app/models
ENV INITIAL_CAPITAL=10.0
ENV MIN_MODEL_CONFIDENCE=0.85
ENV MODEL_CACHE_SIZE=10
ENV PYTHONPATH=/app

# Start FreqAI interface using uvicorn - changed to match PYTHONPATH in docker-compose.yml
CMD ["uvicorn", "freqai_interface:app", "--host", "0.0.0.0", "--port", "8001"]